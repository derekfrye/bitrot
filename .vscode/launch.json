    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'bitrot'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=bitrot",
                    "--package=bitrot"
                ],
                "filter": {
                    "name": "bitrot",
                    "kind": "bin"
                }
            },
            "args": [
                "--path-to-data",
                "/home/m1n2/tmp/",
                "--path-to-cksums",
                "/home/m1n2/tmp2/",
                "--mode",
                "ck",
                "--bufsize",
                "512",
                "--data-filename-match",
                ".[Mm][pP4][4vV]$",
                "--thread-count",
                "1",
                "--pretty-print",
                // "--unit-testing",
                "--error-output-file",
                "/home/m1n2/docker/bin/bitrot/a"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'bitrot'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=bitrot",
                    "--package=bitrot"
                ],
                "filter": {
                    "name": "bitrot",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}